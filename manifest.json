{
  "manifest_version": 2,

  "name": "Exercise with Clicks",
  "description": "Keep track of the weight you have lost just by clicking your mouse!",
  "version": "0.1.1.0",
  "options_page": "options.html",

  "permissions":[
    "storage",
    "notifications"
  ],

  "icons": {
    "16": "img/mouse16.png",
    "48": "img/mouse48.png",
    "128": "img/mouse128.png"
  },

  "web_accessible_resources": ["stuff.js", "img/trophy.png"],

  "content_scripts": [{
    "js": ["jquery.min.js","clickdb.js","stuff.js"],
    "matches": [ "http://*/*", "https://*/*" ],
    "all_frames": true
  }],

  "background": {
    "scripts": ["clickdb.js","background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": {
      "19": "img/mouse.png"
    },
    "default_title": "Exercise with Clicks"
  }
}